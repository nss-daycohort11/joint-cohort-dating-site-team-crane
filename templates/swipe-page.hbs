<div id="swipe-view">
  	<div id="main-content" class="row">
  		<div class="col-md-3">
  			<button type="button" id="reject-button" class="btn btn-default btn-lg">
				<span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
			</button>
  		</div>
  		<div class="col-md-6 swipe-view-user-layout">
  			<div class="row">
	  			<h2 class>{{furryName}}</h2>
	  		</div>
	  		<div class="row" id="large-user-image">
	  			<img src={{picture}}>
	  		</div>
	  		<div class="row" id="userdata">
	  			<p>{{species}} - {{age}} - {{gender}}</p>
	  			<p class="bio">{{bio}}</p>
	  		</div>
  		</div>
  		<div class="col-md-3">
  			<button type="button" id="like-button" class="btn btn-default btn-lg">
				<span class="glyphicon glyphicon-menu-right" aria-hidden="true"></span>
			</button>
  		</div>
  	</div>
</div>

